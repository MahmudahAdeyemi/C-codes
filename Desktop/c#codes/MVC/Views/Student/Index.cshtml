@model IEnumerable<MVC.ENTITIES.Student>;

<style>
    a:hover{
        font-size: 120%;
    }
</style>

<h1>List of Students</h1>
<label>Total Students: </label>@TempData["Students"]
<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th>S/N</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Age</th>
            <th>Email</th>
            <th>Password</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @{int count = 0;}

        @foreach (var item in Model)
        {
            count ++;
            <tr>
            <td>@count</td>
            <td>@item.FName</td>
            <td>@item.LName</td>
            <td>@item.Age</td>
            <td>@item.Email</td>
            <td>@item.Password</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" > Details </a>
            </td>
             <td>
                <a asp-action="Update" asp-route-id="@item.Id" > Update </a>
            </td>
             <td>
                <a asp-action="Delete" asp-route-id="@item.Id" > Delete </a>
            </td>
            </tr>
        }
       
    </tbody>

    <p><button><a asp-action="Create">Add Student</a></button></p>
</table>