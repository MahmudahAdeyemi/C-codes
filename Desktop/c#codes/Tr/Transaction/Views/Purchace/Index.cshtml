@model Transaction.ResponseModel.PurchasesResponseModel;
<style>
    a:hover{
        font-size: 120%;
    }
</style>



@if (@Model.Data.Count() != 0)
{
    <h1>List of Purchase</h1>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>S/N</th>
                <th>Date</th>
                <th>PurchaceReferenceNumber</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @{int count =0;}
            @foreach (var item in Model.Data)
            {
                count ++;
                <tr>
                <td>@count</td>
                <td>@item.Date</td>
                <td>@item.PurchaceReferenceNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"> Details </a>
                </td>
                <td>
                    <a asp-action="NoOfProduct" asp-route-id="@item.Id" > Update </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                </td>
                </tr> 
                
                
            }
        
        </tbody>
    </table>
}
else
{
    <h1>There are no purchases to be displayed for now.</h1>
}
<p><button><a asp-action="GetPurchaseByMonth">GetPurchaseByMonth</a></button></p>