@model Transaction.ResponseModel.PurchacesResponseModel;
<style>
    a:hover{
        font-size: 120%;
    }
</style>
@if (Model.Data.Count() != 0)
{
    <h1>Details about the purchase</h1>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                    <th>Date</th>
                    <th>QuanPurchaceReferenceNumbertity</th>
                    <th>TotalPrice</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <th>@item.Date</th>
                    <th>@item.PurchaceReferenceNumber</th>
                    <th>@item.TotalPrice</th>
                </tr>
            }
        
        </tbody>
    </table>
}
else
{
    <h1>You have not made any purchase this month.</h1>
}
<button><a asp-action="Index">Back</a></button>