@model Transaction.ResponseModel.ShopItemResponse;
<style>
    a:hover{
        font-size: 120%;
    }
</style>

<h1>List of ShopItem</h1>
<table class="table table-sm table-hover">
@if (@Model.Data.Count() != 0)
{
    
    <thead>
        <tr>
            <th>S/N</th>
            <th>Name</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @{int count =0;}
        @foreach (var item in Model.Data)
        {
            count ++;
            <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Quantity</td>
            </tr> 
        }
    </tbody>
    
}
else
{
    <h1>The shop is empty for now.</h1>
}
<\table>
