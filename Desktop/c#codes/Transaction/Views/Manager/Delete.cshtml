@model Transaction.ResponseModel.ManagerResponse
<style>
    a:hover{
        font-size: 120%;
    }
</style>
<h1>Student's Information</h1>
<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@Model.Data.FirstName</td>
                <td>@Model.Data.LastName</td>
            </tr>
    </tbody>
</table>
<h4>Are you sure you want to delete this manager.</h4>
<form asp-action ="Delete" asp-route-id="@Model.Data.Id">
    <input type="hidden" asp-for="@Model.Data.Id"/>
    <input type="submit" value ="Delete" class="btn btn-danger"/>
</form>