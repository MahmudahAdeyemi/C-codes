@using Transaction.Entities;
@model Transaction.RequestModel.SalesRequestModel ;

<form method="Post">
    <div class="col-md-6" style = "margin-top:40px; font-size: larger; font weight: bold;colour: darkcyan">
        <div class="form-row">
            <div class="col-md-6"style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                <label asp-for="PaymentStatus" class="control-label"></label>PaymentStatus
                <select asp-for="PaymentStatus" class="form-control" required>
                    <option value="@PaymentStatus.Transfer">Transfer</option>
                    <option value="@PaymentStatus.Cash">Cash</option>
                    <span asp-validation-for="PaymentStatus" class="text-danger"></span>
                </select>
            </div>
        </div>
<button type="submit">Create</button>
@for (int i = 0; i < int.Parse(TempData["NoOfProducts"].ToString()); i++)
{
    <div class="row">
        <div class="col">
            <label asp-for="ProductQuantity">Quantity</label>
            <input asp-for = "ProductQuantity" type="text" class="form-control">
        </div>
        <div class="col" style="font-size: larger; font-weight: bold; color: darkcyan">
            <label asp-for="ProductId"></label>
                    <select asp-for="ProductId" class="form-control" asp-items ="ViewBag.products">
                        <option value="">--Select Product</option>
                    </select>
        </div>
    </div> 
}


</form>