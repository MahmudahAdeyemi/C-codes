@model Transaction.ResponseModel.SalesRepsResponseModel;
<style>
    a:hover{
        font-size: 120%;
    }
</style>
@if (Model.Data.Count != 0)
{
    <h1>List of SalesRep</h1>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>S/N</th>
                <th>FirsName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
                <th>Add Sales</th>
            </tr>
        </thead>
        <tbody>
            @{int count =0;}
            @foreach (var item in Model.Data)
            {
                count ++;
                <tr> 
                <td>@count</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"> Details </a>
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" > Update </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                </td>
                <td>
                    <a asp-action="AddSales" asp-route-id="@item.Id"> Add Sales </a>
                </td>
                <td>
                    <a asp-action="InputCash" asp-route-id="@item.Id"> Input Cash </a>
                </td>
                </tr> 
            }
        </tbody>
    </table>
}
else
{
    <h1>You have not employed any sales rep</h1>
}
 <p><button><a asp-action="Create">Add SalesRep</a></button></p>
